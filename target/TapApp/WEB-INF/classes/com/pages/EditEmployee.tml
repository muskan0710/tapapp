<html t:type="layout" title="TapApp - Edit Employee"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">
<h1 class="text-center">Edit Employee</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <t:form t:id="edit">
            <div class="form">
                <label class="col-md-12" for="age">Age
                    <span id="popover-age-top" class="hide pull-right block-help">
                        <i class="fa fa-info-circle text-danger" aria-hidden="true"></i>
                        Enter a valid age
                    </span>
                </label>
                <t:textfield t:id="age" type="number" onkeyup="agevalidate()" validate="required"/>
            </div><br/><br/>
            <div class="form-group">
                <button class="btn btn-large btn-success" id="update">Update</button>
            </div>
        </t:form>
    </div>
</div>
</html>